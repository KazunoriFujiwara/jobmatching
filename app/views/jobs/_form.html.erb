<h1>お仕事新規登録</h1>
<div class="row">
  <div class="col-6">
    <%= form_with(model: job, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :content, 'お仕事内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>